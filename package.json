{
  "name": "textopia",
  "version": "1.0.0",
  "scripts": {
    "start": "concurrently \"sudo npm run start:frontend\" \"sudo npm run start:backend\"",
    "start:frontend": "react-scripts start",
    "start:backend": "set NODE_OPTIONS=--openssl-legacy-provider && sudo flask run --host=0.0.0.0",
    "build": "set NODE_OPTIONS=--openssl-legacy-provider && react-scripts build",

    "install:requirements": "sudo pip install -r requirements.txt"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "react-scripts": "^4.0.3"
  },
  "devDependencies": {
    "concurrently": "^7.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
