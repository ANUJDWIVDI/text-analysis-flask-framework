{
  "name": "textopia",
  "version": "1.0.0",
  "scripts": {
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "node ./node_modules/react-scripts/bin/react-scripts.js start",
    "start:backend": "set NODE_OPTIONS=--openssl-legacy-provider && flask run --host=0.0.0.0",
    "build": "set NODE_OPTIONS=--openssl-legacy-provider && node ./node_modules/react-scripts/bin/react-scripts.js build"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "react-scripts": "^4.0.3"
  },
  "devDependencies": {
    "concurrently": "^7.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
